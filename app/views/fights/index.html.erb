<p id="notice"><%= notice %></p>

<h1>Listing Fights</h1>

<table>
  <thead>
    <tr>
      <th>Fight over</th>
      <th>Turn count</th>
      <th>Exp gain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fights.each do |fight| %>
      <tr>
        <td><%= fight.fight_over %></td>
        <td><%= fight.turn_count %></td>
        <td><%= fight.exp_gain %></td>
        <td><%= link_to 'Show', fight %></td>
        <td><%= link_to 'Edit', edit_fight_path(fight) %></td>
        <td><%= link_to 'Destroy', fight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

