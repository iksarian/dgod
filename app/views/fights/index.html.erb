<p id="notice"><%= notice %></p>

<h1>Listing Fights</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Character</th>
      <th>Enemy</th>
      <th>Exp gain</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fights.each do |fight| %>
      <tr>
        <td><%= fight.character.name if fight.character %></td>
        <td><%= fight.monster.name if fight.monster%></td>
        <td><%= fight.exp_gain %></td>
        <td><%= link_to 'Show', fight_users_path(fight) %></td>
        <td><%= link_to 'Edit', edit_fight_path(fight) %></td>
        <td><%= link_to 'Destroy', fight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

