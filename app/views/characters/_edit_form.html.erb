<%= simple_form_for(@character) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true  %>
    <% if current_user.is_gm %> 
    <%= f.input :profession_id, collection: Profession.all, prompt: false %>
    <%= f.input :level %>
    <%= f.input :hp %>
    <%= f.input :mana  %>
  <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
