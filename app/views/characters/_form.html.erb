<%= simple_form_for(@character) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true  %>
    <%= f.input :profession_id, collection: Profession.all, prompt: false %>
    <% if current_user.is_gm %> <%= f.input :level, :input_html => { :value => 1 } %>
    <%= f.input :hp, :input_html => { :value => 100 } %>
    <%= f.input :mana, :input_html => { :value => 50 }  %>
    <%= f.input :gold, :input_html => { :value => 10 } %> <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
