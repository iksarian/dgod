<p id="notice"><%= notice %></p>

<h1>Character Index</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th class="center">Profession</th>
      <th>Level</th>
      <th>Hp</th>
      <th>Mana</th>
      <th class="center">Gold</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td class="col-sm-1"><%= "Profession sprite here" %></td>
        <td class="col-sm-1"><%= link_to character.name, character %></td>
        <td class="col-md-1"><div class="center"><%= character.profession.title %></div></td>
        <td class="col-sm-1"><%= character.level %></td>
        <td class="col-md-2"><div class="progress">
          <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
            <%= character.hp %>
      </div>
  </div></td>
  <td class="col-md-2"> <div class="progress">
      <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
              <%= character.mana %>
      </div>
  </div></td>
  <td class="col-sm-1"> <div class="col-lg-offset-4 col-sm-1"><%= character.gold %></div></td>
  <td><div class="btn-group btn-group-sm" role="group" aria-label="...">
        <% #if user_signed_in? and current_user.id == @character.user_id %>
        <%= link_to 'Edit', edit_character_path(character), class: "btn btn-warning btn-sm" %>
        <%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></div></td>
        <% #end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
  <%= link_to 'New Character', new_character_path, class: "btn btn-success btn-lg" %>
<% end %>
