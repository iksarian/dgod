<p id="notice"><%= notice %></p>

<h1>Listing Mes</h1>

<table class="table table-stripped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="center">Quality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td><%= merchant.name %></td>
        <td class="center"><%= merchant.quality %></td>
        <td><div class="btn-group btn-group-sm" role="group" aria-label="..."> <%= link_to 'Show', merchant, class: "btn btn-warning btn-sm" %>
          <%= link_to 'Edit', edit_merchant_path(merchant), class:"btn btn-warning btn-sm" %>
        <%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Merchant', new_merchant_path, class: "btn btn-success btn-lg" %>
