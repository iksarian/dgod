<p id="notice"><%= notice %></p>

<h1>Commerce District</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th class="center">Quality</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @merchants.each do |merchant| %>
      <tr>
        <td class="col-sm-1"><%= link_to merchant.name, merchant %></td>
        <td class="center"><% if merchant.quality == "Poor" %><span class="label label-default"><%= merchant.quality %></span>
        <% elsif merchant.quality == "Average" %><span class="label label-info"><%= merchant.quality %></span>
        <% elsif merchant.quality == "Improved" %><span class="label label-primary"><%= merchant.quality %></span>
        <% elsif merchant.quality == "Artisan" %><span class="center label label-success"><%= merchant.quality %></span>
        <% elsif merchant.quality == "Masterful" %><span class="label label-danger"><%= merchant.quality %></span>
        <% elsif merchant.quality == "Artifact" %><span class="label label-warning"><%= merchant.quality %></span><% end %></td>
        <td><div class="btn-group btn-group-sm" role="group" aria-label="..."> 
            <% if current_user.is_gm %>
        <%= link_to 'Edit', edit_merchant_path(merchant), class:"btn btn-warning btn-sm" %>
        <%= link_to 'Destroy', merchant, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></div></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

            <% if current_user.is_gm %>
<%= link_to 'New Merchant', new_merchant_path, class: "btn btn-success btn-lg" %>
            <% end %>
