<p id="notice"><%= notice %></p>

<h1>Bestiary</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Drops</th>
      <th>Stats</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @monsters.each do |monster| %>
      <tr>
        <td><%= link_to monster.name, monster %></td>
        <td><%= monster.drops %></td>
        <td><%= monster.stats %></td>
        <td><%= monster.level %></td>
        <td><div class="btn-group btn-group-sm" role="group" aria-label="...">
          <%= link_to 'Edit', edit_monster_path(monster), class: "btn btn-warning btn-sm" %>
          <%= link_to 'Destroy', monster, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm"  %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Monster', new_monster_path, class: "btn btn-success btn-md" %>
